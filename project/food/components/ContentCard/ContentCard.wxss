@import "../../assets/wxss/iconfont.wxss";

.content-card {
  border-radius: 24rpx;
  height:490rpx;
  box-shadow: 0rpx 4rpx 42rpx rgb(0 0 0 / 0.16);
  margin-top:36rpx;
  position: relative;
}

.content-card-img{
  width:100%;
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
}

.content-card-desc{ 
  height: calc(490rpx - 240rpx);
  background-color: #fff;
  position: absolute;
  box-sizing: border-box;
  width: 100%;
  bottom: 0;
  border-top-right-radius: 24rpx;
  border-top-left-radius: 24rpx;
  padding:36rpx;
  box-sizing: border-box;
  color:var(--themeFontColor)
}

.content-card-desc-title {
  display:flex;
  justify-content: space-between;
  align-items: center;
}

.line {
  width:100%;
  height:2rpx;
  background-color: #d8d8d8;
  margin-top:32rpx;
  margin-bottom:32rpx;
}

.content-card-desc-detail {
  display:flex;
}

.content-card-desc-detail-item {
  flex:1;
  border-right:1px solid #d8d8d8;
  display:flex;
  justify-content: center;
  align-items: center;
}

.content-card-desc-detail-item.item-last {
  border:unset
}