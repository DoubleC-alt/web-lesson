<view class="top-bar">
  <search-input />
  <scroll-view scroll-x="true" class="categroys-scroll">
    <view style="display:flex">
      <navigator url="/pages/categroy/categroy" wx:for="{{categroys}}" wx:key="index" class="categroy-item">
        <image src="{{item.imgPath}}" style="width:90rpx;margin-bottom:8rpx;" mode="widthFix" />
        <text>{{item.name}}</text>
      </navigator>
    </view>
  </scroll-view>
</view>
<view class="content">
  <view class="content-top-bar">
    <view class="content-top-bar-title">今日推荐</view>
    <view class="content-top-bar-icon">
      <view class="content-top-bar-icon-item">
        <text class="iconfont icon-setting-" style="font-size:36rpx;font-weight:bold;"></text>
      </view>
      <view class="content-top-bar-icon-item">
        <text class="iconfont icon-filter" style="font-size:36rpx;font-weight:bold;"></text>
      </view>
    </view>
  </view>
  <view class="content-card" wx:for="{{cards}}"  wx:key="index">
    <image src="{{item.imgPath}}" class="content-card-img" mode="widthFix" />
    <view class="content-card-desc">
      <view class="content-card-desc-title">
        <view style="font-size:38rpx;font-weight:500;">{{item.title}}</view>
        <view class="iconfont icon-heart1" style="color:#FF3541;font-size:40rpx;"></view>
      </view>
      <view class="line"></view>
      <view class="content-card-desc-detail">
        <view class="content-card-desc-detail-item" style="color:#ff3541;font-size:36rpx;">¥ {{item.price}}</view>
        <view class="content-card-desc-detail-item">
          <text class="iconfont icon-comment" style="font-size:36rpx;margin-right:20rpx"></text>
          <text>{{item.commentNum}}</text>
        </view>
        <view class="content-card-desc-detail-item item-last">
          <text class="iconfont icon-star" style="font-size:24px;margin-right:20rpx;"></text>
          <text>{{item.rating}}</text>
        </view>
      </view>
    </view>
  </view>
</view>