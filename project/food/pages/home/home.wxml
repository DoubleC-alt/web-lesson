      <view wx:for="{{categroys}}" wx:key="index" class="categroy-item">
        <image src="{{item.imgPath}}" style="width:90rpx;margin-bottom:8rpx;" mode="widthFix" />
        <text>{{item.name}}</text>
      </view>
    </view>
  </scroll-view>
</view>