.top-bar {
  height:320rpx;
  color:#fff;
  background-color: var(--themeColor);
}

.categroys-scroll {
  height:calc(320rpx - 90rpx);
  padding-top:16rpx;
  box-sizing: border-box;
}

.categroy-item {
  flex-shrink:0;
  margin-left:18rpx;
  margin-right:32rpx;
  display:flex;
  flex-direction: column;
  align-items: center;
}

.content {
  margin-top:-32rpx;
  border-top-left-radius: 36rpx;
  border-top-right-radius: 36rpx;
  height:calc(100vh - 320rpx + 32rpx);
  background-color:#fff;
  overflow-y:auto;
}