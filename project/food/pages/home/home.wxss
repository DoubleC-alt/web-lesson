@import "../../assets/wxss/iconfont.wxss";

.top-bar {
  height:320rpx;
  color:#fff;
  background-color: var(--themeColor);
}

.categroys-scroll {
  height:calc(320rpx - 90rpx);
  padding-top:16rpx;
  box-sizing: border-box;
}

.categroy-item {
  flex-shrink:0;
  margin-left:18rpx;
  margin-right:32rpx;
  display:flex;
  flex-direction: column;
  align-items: center;
}

.content {
  margin-top:-32rpx;
  border-top-left-radius: 36rpx;
  border-top-right-radius: 36rpx;
  height:calc(100vh - 320rpx + 32rpx);
  background-color:#fff;
  overflow-y:auto;
  padding:56rpx 32rpx;
  box-sizing: border-box;
}

.content-top-bar {
  display:flex;
  justify-content: space-between;
  align-items: flex-end;
}

.content-top-bar-title {
  font-size:38rpx;
  font-weight: bold;
  color:var(--themeFontColor);
}

.content-top-bar-icon {
  display:flex;
}

.content-top-bar-icon-item {
  background-color:#FF444F;
  width:66rpx;
  height:66rpx;
  border-radius: 32rpx;
  color:#fff;
  display:flex;
  justify-content: center;
  align-items: center;
  margin-left:24rpx;
  box-shadow: 0rpx 4rpx 32rpx rgb(255 80 91 / 0.4);
}