<button bindtap="showComp" data-name="for">for 例子页面</button>
<button bindtap="showComp" data-name="if">if 例子页面</button>
<button bindtap="showComp" data-name="block">block 例子页面</button>
<button bindtap="showComp" data-name="slot">slot 例子页面</button>
<for-test wx:if="{{showTarget === 'for'}}"></for-test>
<if-test wx:if="{{showTarget === 'if'}}"></if-test>
<block-test wx:if="{{showTarget === 'block'}}"></block-test>
<slot-test wx:if="{{showTarget === 'slot'}}">
  <view slot="left">左插槽</view>
  <view slot="right">右插槽</view>
</slot-test>

<tabs tabs="{{tabs}}" bindtabsItemChange="handleTabsItemChange">
  <view style="display:flex;flex-direction: column;">
    <view style="flex:1;height:100px;background-color:red;">内容说明</view>
    <view style="flex:1;height:100px;background-color:blue;color:#fff;">
      {{tabs[activeIndex-1].content}}
    </view>
  </view>
</tabs>

